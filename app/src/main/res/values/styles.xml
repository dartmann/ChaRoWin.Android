<resources>

    <!-- Because we get a NP, the default theme ("Theme.AppCompat.Light.DarkActionBar") is replaced by: -->
    <!-- @android:style/Theme.Holo.Light.DarkActionBar -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Main theme colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black_light</item>
        <!--NOT POSSIBLE -_- (<API21) <item name="android:colorAccent">@color/green</item-->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:button">@color/green_light</item>
        <!-- custom drawer_list_item activated color -->
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <!--NOT POSSIBLE -_- (<API21) item name="android:colorPrimary">@color/green</item-->
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:panelFullBackground">@android:color/white</item>
        <!-- item name="android:alertDialogTheme">@style/ChaRoWin_AppCompatDialog</item-->
        <item name="android:listChoiceIndicatorMultiple">@drawable/check_box</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/green_light</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:colorBackground">@color/green_light</item>
        <item name="android:textColorHighlight">@color/green_light_activated</item>
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/green_light_activated</item>
        <item name="colorButtonNormal">@color/green_light</item>
        <item name="android:listSelector">@drawable/menu_selector</item>
        <!-- Used by MediaRouter -->
        <item name="isLightTheme">true</item>
    </style>
</resources>
