<resources>

    <!-- Base application theme. -->
    <!-- Because we get a NP, the default theme ("Theme.AppCompat.Light.DarkActionBar") is replaced by: -->
    <!-- @android:style/Theme.Holo.Light.DarkActionBar -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Main theme colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:button">@color/green_light</item>
        <!-- custom drawer_list_item activated color -->
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <!--NOT POSSIBLE -_- (<API21) item name="android:colorPrimary">@color/green</item-->
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:panelFullBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/brown</item>
        <item name="android:colorBackground">@color/green_light</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <!--
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorForegroundInverse">@color/foreground_material_dark</item>
        -->
        <item name="android:colorBackground">@color/green_light</item>
        <!--
        <item name="android:colorBackgroundCacheHint">@color/abc_background_cache_hint_selector_material_light</item>

        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorTertiaryInverse">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/abc_primary_text_disable_only_material_light</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorHint">@color/hint_foreground_material_light</item>
        <item name="android:textColorHintInverse">@color/hint_foreground_material_dark</item>
        -->
        <item name="android:textColorHighlight">@color/green_light_activated</item>

        <item name="android:colorActivatedHighlight">@color/rose</item>
        <item name="android:activatedBackgroundIndicator">@color/brown</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/green_light_activated</item>
        <item name="colorButtonNormal">@color/green_light</item>
        <item name="android:listSelector">@drawable/menu_selector</item>
        <!--
        <item name="colorSwitchThumbNormal">@color/switch_thumb_material_light</item>
        -->

        <!-- Used by MediaRouter -->
        <item name="isLightTheme">true</item>
    </style>

    <!-- change app style to poison green -->
    <color name="green">#3CF527</color>
    <color name="green_light">#BCFFB5</color>
    <color name="green_light_activated">#A2DB9C</color>
    <color name="orange">#FF5722</color>
    <color name="orange_dark">#E65122</color>
    <color name="orange_light">#FF835C</color>
    <color name="blue">#2196f3</color>
    <color name="blue_android_material">#33b5e5</color>
    <color name="brown">#822700</color>
    <color name="brown_dark">#571b01</color>
    <color name="black">#000000</color>
    <color name="grey">#9C9C9C</color>
    <color name="rose">#ff9e75</color>
    <color name="rose_light">#fcdccf</color>
</resources>
