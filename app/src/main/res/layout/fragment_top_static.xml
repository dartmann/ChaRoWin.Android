<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/rose_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_top_static_relativelayout_training"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/rose"
        android:layout_margin="@dimen/abc_action_bar_overflow_padding_start_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/fragment_top_static_relativelayout_training_relativelayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_top_static_relativelayout_training_textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nächstes Training"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/fragment_top_cardview_linearlayout_imageview_cardsettings_new"
                android:layout_width="40dp"
                android:src="@drawable/ic_menu_black_48dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/fragment_training_cardlayout_exercise"
                android:layout_height="40dp"
                android:alpha="0.5"
                />
        </RelativeLayout>

        <View
            android:id="@+id/fragment_top_static_relativelayout_training_view_separator"
            android:layout_width="fill_parent"
            android:layout_below="@id/fragment_top_static_relativelayout_training_relativelayout"
            android:layout_marginTop="5dp"
            android:layout_height="0.2dp"
            android:visibility="visible"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_below="@id/fragment_top_static_relativelayout_training_view_separator"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_training_textview_trainingname"
                    android:text="Brust und Rücken"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_training_textview_trainingday"
                    android:text="Dienstag"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_training_textview_amountexercices"
                    android:text="6 Übungen"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_today_black_48dp"
                        android:layout_height="50dp"
                        android:alpha="0.5"
                        />
                    <TextView
                        android:text="Vor 36 Stunden"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_alarm_black_24dp"
                        android:layout_height="50dp"
                        android:alpha="0.5"
                        />
                    <TextView
                        android:text="2 Stunden"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- RelativeLayout for the next meal view -->
    <RelativeLayout
        android:id="@+id/fragment_top_static_relativelayout_meal"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/abc_action_bar_overflow_padding_start_material"
        android:background="@color/rose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/fragment_top_static_relativelayout_meal_relativelayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_top_static_relativelayout_meal_relativelayout_textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nächste Mahlzeit"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/fragment_top_static_relativelayout_meal_relativelayout_cardsettings_new"
                android:layout_width="40dp"
                android:src="@drawable/ic_menu_black_48dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/fragment_training_cardlayout_exercise"
                android:layout_height="40dp"
                android:alpha="0.5"
                />
        </RelativeLayout>

        <View
            android:id="@+id/fragment_top_static_relativelayout_meal_view_separator"
            android:layout_width="fill_parent"
            android:layout_below="@id/fragment_top_static_relativelayout_meal_relativelayout"
            android:layout_marginTop="5dp"
            android:layout_height="0.2dp"
            android:visibility="visible"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_below="@id/fragment_top_static_relativelayout_meal_view_separator"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_meal_textview_trainingname"
                    android:text="Frühstück"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_meal_textview_trainingday"
                    android:text="08:00 Uhr"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id=
                        "@+id/fragment_top_static_relativelayout_meal_textview_amountexercices"
                    android:text="600 kCal"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ListView
                    android:id="@+id/fragment_top_static_relativelayout_meal_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>