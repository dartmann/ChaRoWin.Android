<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fragment_diet_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/fragment_diet_cardview_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_diet_cardview_linearlayout_imageview_mealicon"
            android:layout_width="50dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#EEEEEE"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight=".7"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fragment_diet_cardview_linearlayout_textview_mealname"
                android:text="Essenname"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:alpha="0.5"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_light"
                    android:src="@drawable/ic_access_time_black_48dp"
                    />
                <TextView
                    android:id="@+id/fragment_diet_cardview_linearlayout_textview_mealtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="08:00"
                    />
                <TextView
                    android:id="@+id/fragment_diet_cardview_linearlayout_textview_energykcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="kCal"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/fragment_diet_cardview_linearlayout_imageviewsettings"
            android:layout_width="1dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:alpha="0.5"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>