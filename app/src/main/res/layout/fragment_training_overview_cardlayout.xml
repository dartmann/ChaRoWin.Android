<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_training_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!-- TODO: padding top is not the nicest way (you can see it in the app...) -->
    <LinearLayout
        android:id="@+id/fragment_training_overview_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_corner_list"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/fragment_training_overview_imageview"
            android:layout_width="120dp"
            android:layout_weight=".25"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/fragment_training_overview_textview"
            android:layout_width="fill_parent"
            android:layout_weight=".75"
            android:textSize="@dimen/abc_text_size_large_material"
            android:gravity="center|start"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>