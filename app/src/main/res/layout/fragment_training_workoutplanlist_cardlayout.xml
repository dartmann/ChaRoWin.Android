<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fragment_training_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="0.6"
            >
            <TextView
                android:id="@+id/fragment_training_workoutplanlist_cardview_textview_workoutplanname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mockplan"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/fragment_training_workoutplanlist_cardview_textview_workoutdescription"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Ein mockup Trainingsplan zu Testzwecken"
                android:textSize="14sp"
                android:layout_below="@+id/fragment_training_workoutplanlist_cardview_textview_workoutplanname"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/fragment_training_workoutplanlist_cardview_textview_workoutdescription"
                >

                <TextView
                    android:id="@+id/fragment_training_workoutplanlist_cardview_textview_amountdays"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" Tage/Woche"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_training_workoutplanlist_cardview_imagebutton_pinascurrent"
                android:src="@drawable/ic_favorite_border_black_48dp"
                android:alpha="0.5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#EEEEEE"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            >
            <ImageView
                android:id="@+id/fragment_training_workoutplanlist_cardlayout_imageview_settings"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:alpha="0.5"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>