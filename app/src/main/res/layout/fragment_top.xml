<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--
    xmlns:app="http://schemas.android.com/apk/res-auto"
    -->

    <TextView
        android:id="@+id/fragment_top_textview"
        android:text="@string/fragment_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fragment_top_button_training"
        android:layout_below="@id/fragment_top_textview"
        android:layout_width="fill_parent"
        android:text="@string/fragment_training_title"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fragment_top_button_dietplan"
        android:layout_below="@id/fragment_top_button_training"
        android:layout_width="fill_parent"
        android:text="@string/fragment_diet_title"
        android:layout_height="wrap_content" />

</RelativeLayout>