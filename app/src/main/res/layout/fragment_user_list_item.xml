<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding ="10dp"
    >
    <ImageView
        android:id="@+id/fragment_user_list_item_imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    <TextView
        android:id="@+id/fragment_user_list_item_textview_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/fragment_user_list_item_imageview_icon"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        />
    <TextView
        android:id="@+id/fragment_user_list_item_textview_subheadline"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_toEndOf="@id/fragment_user_list_item_imageview_icon"
        android:layout_below="@id/fragment_user_list_item_textview_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        />
    <CheckBox
        android:id="@+id/fragment_user_list_item_checkbox"
        android:layout_toEndOf="@id/fragment_user_list_item_textview_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        />
</RelativeLayout>