<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fragment_diet_dietplanlist_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="0.6"
            >
            <TextView
                android:id="@+id/fragment_diet_dietplanlist_cardview_textview_dietplanname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/fragment_diet_dietplanlist_cardview_textview_description"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/fragment_diet_dietplanlist_cardview_textview_dietplanname"
                android:text="text"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/fragment_diet_dietplanlist_cardview_textview_description"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_today_black_48dp"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        />
                    <TextView
                        android:id="@+id/fragment_diet_dietplanlist_cardview_textview_amountdays"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="text"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_local_dining_black_24dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        />
                    <TextView
                        android:id="@+id/fragment_diet_dietplanlist_cardview_textview_amountmeals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.5"
                    >
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_flash_on_black_24dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        />
                    <TextView
                        android:id="@+id/fragment_diet_dietplanlist_cardview_textview_energykcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kCal"
                        android:textSize="14sp"
                        android:layout_marginStart="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_diet_dietplanlist_cardview_imagebutton_pinascurrent"
                android:src="@drawable/ic_favorite_border_black_48dp"
                android:alpha="0.5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#EEEEEE"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            >
            <ImageView
                android:id="@+id/fragment_diet_dietplanlist_cardview_imageview_settings"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:alpha="0.5"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>