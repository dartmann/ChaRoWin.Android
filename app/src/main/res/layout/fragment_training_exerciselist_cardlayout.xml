<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fragment_diet_dietplanlist_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_training_exerciselist_cardlayout_imageview_exerciseicon"
                android:layout_width="match_parent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#EEEEEE"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".8"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/fragment_training_exerciselist_cardlayout_textview_exercisename"
                android:text="Platzhalter"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:lines="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:text="SÃ¤tze: "
                        />
                    <TextView
                        android:id="@+id/fragment_training_exerciselist_cardlayout_textview_sets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:text="4"
                        />
                </LinearLayout>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_weight=".25"
                   android:layout_height="wrap_content"
                   >
                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_alarm_black_24dp"
                       android:alpha="0.5"
                       />
                   <TextView
                       android:id="@+id/fragment_training_exerciselist_cardlayout_textview_resttime"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textSize="16sp"
                       android:textColor="@android:color/secondary_text_light"
                       android:text="90"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textSize="16sp"
                       android:textColor="@android:color/secondary_text_light"
                       android:text="s"
                       />
               </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="Wdhl.: "
                    />
                <TextView
                    android:id="@+id/fragment_training_exerciselist_cardlayout_textview_reps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="8,6,6,4"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/fragment_training_exerciselist_cardlayout_imageview_settings"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:alpha="0.5"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>